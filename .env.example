# Security - Debe ser el mismo JWT_SECRET que el servicio de autenticación
JWT_SECRET=generate-a-secure-random-key-for-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Configura los orígenes allowed
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://tu-frontend-domain.com

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO

# Comunicación entre servicios
AUTH_SERVICE_URL=http://auth-service:8000
# En producción: http://tu-auth-service-dns:8000 o http://auth-service-private-ip:8000

# AWS Configuratio
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Configuración de red para Docker
NETWORK_NAME=auth-network
